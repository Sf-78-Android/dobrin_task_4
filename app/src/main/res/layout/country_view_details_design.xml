<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/country_card_background"
    android:gravity="center_vertical"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFlag"
            android:layout_width="200sp"
            android:layout_height="160sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/afghanistan" />

        <TextView
            android:id="@+id/tvCountryRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/regionTag"
            tools:text="Europe" />

        <TextView
            android:id="@+id/regionTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/region"
            android:textColor="@color/tag_color"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/tvCountryCapital" />

        <TextView
            android:id="@+id/tvCountryCapital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/capitalTag"
            tools:text="Sofia" />

        <TextView
            android:id="@+id/capitalTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/capital"
            android:textColor="@color/tag_color"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/tvCountryName" />

        <TextView
            android:id="@+id/tvCountryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/capitalTag"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/countryTag"
            tools:text="Bulgaria" />

        <TextView
            android:id="@+id/countryTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/country"
            android:textColor="@color/tag_color"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivFlag" />


        <TextView
            android:id="@+id/nativeTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/native_name"
            android:textColor="@color/tag_color"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/tvCountryRegion" />

        <TextView
            android:id="@+id/tvNativeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/nativeTag"
            tools:text="България" />

        <TextView
            android:id="@+id/phonePrefixTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/phone_prefix"
            android:textColor="@color/tag_color"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/tvNativeName" />

        <TextView
            android:id="@+id/tvPhonePrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/phone_prefix"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/phonePrefixTag" />

        <TextView
            android:id="@+id/currencyTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/currency"
            android:textColor="@color/tag_color"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/tvPhonePrefix" />


        <TextView
            android:id="@+id/tvCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/currencyTag"
            tools:text="BGN" />

        <TextView
            android:id="@+id/languagesTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/languages"
            android:textColor="@color/tag_color"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrency" />

        <TextView
            android:id="@+id/tvLanguages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/languagesTag"
            tools:text="Bulgaria, English" />

        <TextView
            android:id="@+id/populationTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/population"
            android:textColor="@color/tag_color"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/tvLanguages" />

        <TextView
            android:id="@+id/tvPopulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivFlag"
            app:layout_constraintStart_toStartOf="@+id/ivFlag"
            app:layout_constraintTop_toBottomOf="@+id/populationTag"
            tools:text="23412424" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


